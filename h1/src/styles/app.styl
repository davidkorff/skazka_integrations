@import 'nib';
@import 'jeet';
@import url('https://fonts.googleapis.com/css?family=Roboto:400,700');

page-width = 2040px;
light-red = #d93440;
dark-red = #c42f3a;
default = #f9f9f9;
border = #cecac9;
link = #0195db;

vw(size) {
    unit(size / page-width * 100, 'vw');
}

default-block() {
    border-radius: 10px;
    border: 1px solid border;
    background-position: center;
    background-size: cover;
    padding: vw(80px);
    margin-bottom: vw(64px);
}

sailplay-magic {
    nested-reset();
    font-family: 'Roboto';

    a:hover {
        opacity: .9;
    }
}

.container {
    padding: vw(64px);
}

.grid {
    &__left {
        column((2 / 3));
    }

    &__right {
        column((1 / 3));
    }
}

.btn {
    background: linear-gradient(to bottom, rgba(125, 185, 232, 1) 0%, rgba(41, 137, 216, 1) 47%, rgba(41, 137, 216, 1) 47%, rgba(0, 110, 201, 1) 50%, rgba(10, 77, 153, 1) 100%);
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, .7);
    color: white;
    font-size: vw(28px);
    font-weight: 700;
    padding: vw(20px) vw(35px);
    display: inline-block;
    text-decoration: none;
}

@import './profile';
@import './status';
@import './questions';
@import './banner';