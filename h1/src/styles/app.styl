@import 'nib';
@import 'jeet';
@import url('https://fonts.googleapis.com/css?family=Roboto:400,600,700');

page-width = 2040px;
light-red = #d93440;
dark-red = #c42f3a;
default = #f9f9f9;
border = #cecac9;
link = #0195db;

vw(size) {
    return unit((size / 2.1), 'px');
}

.no-scroll {
    overflow: hidden;
}

default-block() {
    border-radius: 10px;
    border: 1px solid border;
    background-position: center;
    background-size: cover;
    background-color: default;
    padding: vw(80px);
    margin-bottom: vw(64px);
}

sailplay-magic {
    nested-reset();
    font-family: 'Roboto';

    a:hover {
        opacity: 0.9;
    }
}

.container {
    padding: 5px;
    max-width: 1024px;
    margin: 0 auto;
}

.grid {
    clearfix();

    &__2-3 {
        column((2 / 3));

        +below(880px) {
            stack();
        }
    }

    &__1-3 {
        column((1 / 3));

        +below(880px) {
            stack();
        }
    }

    &__2-4 {
        column((2 / 4));

        +below(880px) {
            stack();
        }
    }

    &__1-4 {
        column((1 / 4));

        +below(880px) {
            stack();
        }
    }

    &__3-4 {
        column((3 / 4));

        +below(880px) {
            stack();
        }
    }
}

.disabled {
    opacity: 0.4;
    pointer-events: none;
}

.btn {
    background: linear-gradient(to bottom, rgba(125, 185, 232, 1) 0%, rgba(41, 137, 216, 1) 47%, rgba(41, 137, 216, 1) 47%, rgba(0, 110, 201, 1) 50%, rgba(10, 77, 153, 1) 100%);
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.7);
    color: white;
    font-size: vw(28px);
    font-weight: 700;
    padding: vw(20px) vw(35px);
    display: inline-block;
    text-decoration: none;
    border: none;
    outline: none;
    cursor: pointer;

    &:hover {
        opacity: 0.8;
    }

    &.gray {
        background: border;
        box-shadow: none;
        color: #666;
    }

    &.wide {
        text-align: center;
        display: block;
    }

    .icon-arrow {
        background: url('~assets/arrow.svg') no-repeat 50% 50%;
        display: inline-block;
        width: 1em;
        height: 1em;
        background-size: contain;
        position: relative;
        margin-right: 0.5em;
        top: 0.25em;
    }
}

.red {
    color: light-red;
}

