@import 'jeet'
@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,600');
@font-face
    font-family: "Knockout";
    src: url(../fonts/knockout.woff);

//reset page&bootstrap styles first
.__sailplay-form
    line-height: initial;
    color: initial;
    & label
        margin-bottom: initial;
        font-weight: 300;

sailplay-magic *
    box-sizing: border-box;

.__sailplay-
    nested-reset()
    
    div
        box-sizing: border-box;

    &padding
        padding: 100px;

    &superscript
        text-decoration: none;
        vertical-align: super;
        font-size: 12px;
        color: black;

    &input_checkbox
        display: none

    &input_checkbox:checked + span + label
        &:before
            content: ''
            position: absolute
            width: 16px;
            height: 16px;
            top: 5px;
            left: 5px;
            background-image: url(../img/check.svg);
            background-color: #0F9675;
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            z-index: 1
        &:after
            background: #0F9675

    &input_checkbox + span
        position: absolute;
        top: 1em;
        width: auto !important;

    &input_checkbox + span + label
        position: relative;
        display: inline-block;
        font-size: 22px;
        font-weight: 300;
        padding: 0 0 0 40px !important;
        &:after
            content: '';
            display: block;
            position: absolute;
            left: 0;
            width: 23px;
            height: 23px;
            top: 0;
            border-radius: 5px;
            border: 1px solid #0F9675;

    &agree
        +below(1000px)
            width: 100%;
            float: none;
            margin-top: 20px;

        width: 45%;
        float: right;
        margin-top: 73px;
        font-size: 18px;
        color: #898989;
        font-weight: 300;

        a
            color: #0f9675;

    &disabled
        opacity: .6;
        pointer-events: none;

    &title
        font-family: "Knockout";
        font-size: 46pt;
        text-transform: uppercase;
        +below(767px)
            font-size: 52px;

    &description
        font-family: "Knockout";
        font-size: 34px;
        margin-top: 7%;
        width: 80%;
        +below(1230px)
            width: 100%;

    &tablet
        +below(930px)
            display: block;
        display: none;

        &.__sailplay-last_img_tablet
            position: relative;
            width: 100%;
            margin-top: 50px;
            left: 0;

    &ib-50
        +below(930px)
            width: 100%;
            display: block;
        +above(930px)
            width: 50%

        display: inline-block;
        width: 50%;

        .__sailplay-btn     
            width: 100%;

    &last_img
        +below(930px)
            display: none;         

        position: static;
        width: 92%;
        bottom: 0;
        height: 100%;
        z-index: 0;
        background-repeat: no-repeat;
        background-position: right;
        background-size: contain;

    &header
        font-weight: 600;
        clear: both;
        font-size: 26px;
        padding-top: 60px
        .__sailplay-text
            float: left;
            font-family: Roboto;
            font-weight: bold;
            font-size: 20pt;

    &bottom_line
        overflow: hidden;
        padding-left: 1em;
        height: .9em;
        position: relative;
        &:after
            content: ''
            display: block;
            width: 100%;
            position: absolute;
            bottom: 0;
            border-bottom: 2px solid rgba(0, 0, 0, .08);



    &last_img_tablet
        +below(930px)
            left: 0 !important;

    &form
        +between(600px, 1000px)
            padding: 10% 12%;
        +below(599px)
            padding: 10% 3%;

        max-width: 965px;
        box-sizing: border-box;
        width: 100%;
        font-family: Roboto;
        font-size: 24px;
        
        .__sailplay-form_row
            +below(1000px)
                padding-top: 0;

            clearfix()
            clear: both;
            padding-top: 26px;

        .__sailplay-form_group
            &.__sailplay-full
                width: 100%;

            +below(1000px)
                width: 100%;
                padding-top: 20px;

            position: relative;
            font-family: Roboto;
            font-size: 22px;
            font-weight: 300;
            width: 45%;
            max-width: 310px;
            float: left;
            .__sailplay-btn, .__sailplay-agree {
                width: 100%;
            }
            +below(930px)
                max-width: 100%;
            &:first-child
                margin-right: 65px;

            &.__sailplay-error
                input
                    border-color: #dfa0a4;
                input.__sailplay-input_checkbox + span + label:after
                    border-color: #dfa0a4;

            .validationMessage
                color: #a6a6a6;
                box-sizing: border-box;
                background: #f1f1f1;
                padding: 15px 20px;
                width: 100%;
                font-size: 14pt;

            label
                align-items: center;
                display: flex;
                padding: 12px 0;
                font-size: 14pt;

                &[for="sms_opt"]
                    float: left
                    padding: 0 0 0 40px

                &[for="email_opt"]
                    float: left                    
                    padding: 0 0 0 40px

            input
                border: 1px solid #e0e0e0;
                border-radius: 5px;
                font-family: Roboto
                font-size: 20px;
                background: white;
                font-weight: 300;
                width: 100%;
                padding: 13px 25px;
                box-sizing: border-box;

                &:focus
                    outline: none;

            .__sailplay-select
                float: left;
                position: relative;
                border-radius: 5px;
                box-sizing: border-box;
                border: 1px solid #e0e0e0;
                padding: 13px 25px;
                height: 57px;
                padding-left: 10px;
                margin-right: 2%;
                +below(380px)
                    padding 13px 10px;
                &:last-child
                    margin-right: 0;

                .__sailplay-select_value
                    float: left;

                svg
                    width: 12px;
                    height: 20px;
                    position: absolute;
                    right: 12px;
                    vertical-align: middle;
                    margin-top: 20px;
                    top: 0;
                    pointer-events: none;

                select
                    opacity: 0;
                    position: absolute;
                    left: 0;
                    top: 0;
                    font-size: auto;
                    width: 100%;
                    height: 100%;

            .__sailplay-toggle_bar
                border-radius: 5px;
                border: 1px solid #e0e0e0;
                overflow: hidden;

                label:first-of-type
                    border-right: 1px solid #e0e0e0;
                    border-radius: 0;

            input[type="radio"].__sailplay-toggle {
                display: none;

                & + label{
                    font-weight: 300;
                    color: black !important;
                    cursor: pointer;
                    display: inline-block;
                    margin-top: 0;
                    padding: 14px 0;
                    background: transparent;
                    width: 50%;
                    z-index: 228;
                    &:after{
                        z-index: -3;
                        background: #0f9675;
                        content: "";
                        height: 100%;
                        position: absolute;
                        top: 0;
                        left: -200%;
                        opacity: 0;
                        transition: opacity 400ms, left 200ms cubic-bezier(0.77, 0, 0.175, 1);
                        width: 100%;
                        pointer-events: none;
                        z-index: -1;
                    }
                }
                &.__sailplay-toggle_left + label {
                    &:after{
                        border-top-left-radius: 5px;
                        border-bottom-left-radius: 5px;
                        left: 100%
                        z-index: 228;
                    }
                }
                &.__sailplay-toggle_right + label{
                    &:after{
                        border-top-right-radius: 5px;
                        border-bottom-right-radius: 5px;
                        left: -100%;
                        z-index: 228;
                    }
                }
                &:checked + label {
                    cursor: default;
                    color: #fff !important;
                    background: transparent;
                    transition: color 200ms;
                    &:after{
                        opacity: 1;                        
                        left: 0;
                        z-index: -3;
                    }
                }
            }

    &btn
        +below(1000px)
            width: 100%;

        margin-top: 60px;
        background: #0f9675;
        display: inline-block;
        padding: 20px 25px;
        border-radius: 5px;
        color: white !important;
        text-decoration: none;
        font-family: Roboto;
        width: 45%;
        font-weight: 600;
        font-size: 24px;
        position: relative;
        text-align: center;
        transition: background 600ms ease, color 600ms ease;

.ui-autocomplete
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    background-color: white;
    & li
        & div    
            font-family: Roboto
            font-size: 20px;
            font-weight: 300;
            width: 100%;
            padding: 5px 25px !important;
            box-sizing: border-box;

            &:focus
                outline: none;

.__sailplay-legal-text
    margin-top: 48px;
    color: #666;
    font-size: 16px
    & li+li
        margin-top: 6px;
    & a
        color: #0f9675;