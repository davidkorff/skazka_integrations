@import 'jeet'
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,600');
@font-face
    font-family: "Knockout";
    src: url(../fonts/knockout.woff);

*
    box-sizing: border-box;

.__sailplay-
    &congrat
        position: relative;
        max-width: 1370px;
        .__sailplay-form
            max-width: none;
            padding-bottom: 0;

    &agree
        +below(1000px)
            width: 100%;
            float: none;
            margin-top: 20px;

        width: 45%;
        float: right;
        margin-top: 80px;
        font-size: 18px;
        color: #898989;
        font-weight: 300;

        a
            color: #0f9675;

    &disabled
        opacity: .6;
        pointer-events: none;

    &title
        font-family: "Knockout";
        font-size: 64px;
        text-transform: uppercase;

    &description
        font-family: "Knockout";
        font-size: 34px;
        margin-top: 7%;
        width: 80%;

    &tablet
        +below(1000px)
            display: block;
        display: none;

        &.__sailplay-last_img_tablet
            position: relative;
            width: 135%;
            left: -18%;
            margin-top: 50px;

    &ib-50
        +below(1000px)
            width: 100%;
            display: block;

        display: inline-block;
        width: 50%;

        .__sailplay-btn
            +below(1000px)     
                width: 100%;   
            width: 80%;

    &last_img
        +below(1000px)
            display: none;         

        position: absolute;
        width: 92%;
        bottom: 0;
        height: 100%;
        z-index: -1;
        background-repeat: no-repeat;
        background-position: right;
        background-size: contain;

    &header
        +below(700px)
            margin: 80px 40px 20px 20px;

        font-weight: 600;
        clear: both;
        font-size: 26px;
        padding-top: 50px
        .__sailplay-text
            float: left;        

    &bottom_line
        overflow: hidden;
        padding-left: 1em;
        height: .9em;
        position: relative;
        &:after
            content: ''
            display: block;
            width: 100%;
            position: absolute;
            bottom: 0;
            border-bottom: 2px solid rgba(0, 0, 0, .08);

    &form
        +below(1000px)
            padding: 10% 12%;

        max-width: 1186px;
        padding: 108px 138px;
        box-sizing: border-box;
        width: 100%;
        font-family: "Roboto";
        font-size: 24px;
        
        .__sailplay-form_row
            +below(1000px)
                padding-top: 0;

            clear: both;
            padding-top: 40px;

        .__sailplay-form_group
            +below(1000px)
                width: 100%;
                padding-top: 20px;

            font-family: "Roboto";
            font-size: 22px;
            font-weight: 300;
            width: 45%;
            float: left;
            &:first-child
                margin-right: 10%;

            &.__sailplay-error
                input
                    border-color: #dfa0a4;

            .validationMessage
                display: block;
                color: #a6a6a6;
                box-sizing: border-box;
                background: #f1f1f1;
                padding: 15px 20px;
                width: 100%;

            label
                display: block;
                padding: 12px 0;
            input
                border: 1px solid #e0e0e0;
                border-radius: 5px;
                font-family: "Roboto"
                font-size: 20px;
                font-weight: 300;
                width: 100%;
                padding: 20px 25px;
                box-sizing: border-box;

                &:focus
                    outline: none;

            .__sailplay-select
                float: left;
                position: relative;
                border-radius: 5px;
                box-sizing: border-box;
                border: 1px solid #e0e0e0;
                padding: 20px 25px;
                margin-right: 2%;
                &:last-child
                    margin-right: 0;

                .__sailplay-select_value
                    float: left;
                    font-size: 20px;

                svg
                    width: 12px;
                    height: 1em;
                    position: absolute;
                    right: .7em;
                    vertical-align: middle;
                    margin-top: 3px;

                select
                    opacity: 0;
                    position: absolute;
                    left: 0;
                    top: 0;
                    font-size: 20px;
                    width: 100%;
                    height: 100%;

            .__sailplay-toggle_bar
                border-radius: 5px;
                border: 1px solid #e0e0e0;
                overflow: hidden;

            input[type="radio"].__sailplay-toggle {
                display: none;
                & + label{
                    font-weight: 300;
                    color: black;
                    cursor: pointer;
                    display: inline-block;
                    margin-top: 0;
                    padding: 18px 0;
                    background: transparent;
                    width: 50%;
                    &:after{
                        background: #0f9675;
                        content: "";
                        height: 100%;
                        position: absolute;
                        top: 0;
                        left: -200%;
                        opacity: 0;
                        transition: opacity 400ms, left 200ms cubic-bezier(0.77, 0, 0.175, 1);
                        width: 100%;
                        z-index: -1;
                    }
                }
                &.__sailplay-toggle_left + label {
                    &:after{
                        border-top-left-radius: 5px;
                        border-bottom-left-radius: 5px;
                        left: 100%
                    }
                }
                &.__sailplay-toggle_right + label{
                    &:after{
                        border-top-right-radius: 5px;
                        border-bottom-right-radius: 5px;
                        left: -100%;
                    }
                }
                &:checked + label {
                    cursor: default;
                    color: #fff;
                    background: transparent;
                    transition: color 200ms;
                    &:after{
                        opacity: 1;                        
                        left: 0;
                    }
                }
            }

    &btn
        +below(1000px)
            width: 100%;

        margin-top: 80px;
        background: #0f9675;
        display: inline-block;
        padding: 20px 25px;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        font-family: "Roboto";
        width: 45%;
        font-weight: 600;
        font-size: 24px;
        position: relative;
        text-align: center;
        transition: background 600ms ease, color 600ms ease;