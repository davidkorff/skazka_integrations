.container {
    font-family: "Roboto";
}

.btn {
    color: white;
    font-family: "Roboto";
    font-size: 20px;
    padding: 15px 40px
    background: #0f9675;
    border-radius: 5px;
    display: inline-block;
    text-decoration: none;
    +below(550px) {
        font-size: 16px;
        padding: 10px 20px;
    }
}

.disabled {
    opacity: .4;
    pointer-events: none;
}

*[class="__sailplay-owl-prev disabled"] {
    display: none;
}

*[class="__sailplay-owl-next disabled"] {
    display: none;
}


.input_poll
    display: none

.input_poll:checked + label
    &:before
        content: ''
        position: absolute
        width: 16px;
        height: 16px;
        top: 5px;
        left: 5px;
        background-image: url(../../assets/icons/check.svg);
        background-color: #0F9675;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        z-index: 1
    &:after
        background: #0F9675    
        border: 1px solid #0F9675;        

.input_poll + label
    max-width: 200px
    position: relative;
    cursor: pointer;
    display: inline-block;
    padding-left: 40px
    &:after
        content: '';
        display: block;
        position: absolute;
        left: 0;
        width: 23px;
        height: 23px;
        top: 0;
        background: #dee2e1
        border: 1px solid #dee2e1;

.input_poll[type="radio"]:checked + label:before {
    background: white;
    width: 13px;
    height: 13px;
    top: 6px;
    left: 6px;
    border-radius: 50%;
}

.input_poll[type="radio"]:checked + label:after {
}

.input_poll[type="radio"] + label:after {
    border-radius: 50%;
}

.input_text
