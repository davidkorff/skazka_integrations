.popup {
    box-shadow: 0 0 15px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.09);
    border-radius: 5px;
    margin: 0 40px 0 40px;
    padding: 0 100px 0px 100px;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    position: relative;
    transition: margin 0.5s, max-height 0.5s, padding 0.5s, opacity 0.2s;

    &__active {
        transition: margin 0.2s, max-height 0.2s, padding 0.2s, opacity 0.5s;
        padding: 100px;
        margin: 40px;
        max-height: 1000px;
        opacity: 1;
    }

    &__close {
        width: 17px;
        height: 17px;
        background: url('../../assets/icons/cross.svg') no-repeat center;
        background-size: contain;
        display: block;
        position: absolute;
        top: 13px;
        right: 13px;
    }

    &__title {
        display: inline-block;
        vertical-align: top;

        &-name {
            font-size: 32px;
            font-family: 'Knockout';
        }

        &-descr {
            font-size: 24px;
            font-family: 'Roboto';
            margin-top: 20px;
        }

        &-points {
            font-size: 32px;
            font-family: 'Knockout';
            color: #bf151f;
        }
    }
}