.actions {
    &__list {
        display: flex;
        justify-content: space-around;
        padding: 0 40px;
    }

    &__item {
        cursor: pointer;
        border: 1px solid #e6e6e6;
        border-radius: 5px;
        height: 115px;
        flex: 1 0px;
        margin-right: 20px;
        display: flex;

        &:last-of-type {
            margin-right: 0;
        }

        .icon {
            width: 38%;
            height: 43px;
            background-size: contain;
            background-repeat: no-repeat;
            background-position-x: 50%;
            position: relative;
            top: 50%;
            margin-top: -21px;
        }
    }

    &__header {
        font-family: 'Changa One';
        font-size: 48px;
        font-weight: 300;
        margin: 80px 0 20px 40px;
    }

    &__text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-right: 28px;
        box-sizing: border-box;

        &-points {
            color: #0f9675;
            font-weight: 600;
        }
    }
}

.poll {
    &__question {
        border-bottom: 1px solid #f1f1f1;
        display: block !important;
        margin-bottom: 3em;

        &:last-of-type {
            border: 0;
        }
    }

    &__choices {
        margin-top: 3em;
    }

    &__choice {
        margin-bottom: 1.5em;
        font-size: 22px;
        line-height: 25px;

        &:last-of-type {
            margin-bottom: 3em;
        }
    }
}

.refer-input {
    background: #f1f1f1;
    border-radius: 5px;
    padding: 15px;
    width: 50%;
    border: 0;
    font-size: 24px;
    margin-right: 24px;
    margin-top: 2em;
}